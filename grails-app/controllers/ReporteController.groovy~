//        }
        params.municipioRemitente = lugar.toString().toUpperCase()
        println "antes"
        if(params.signatario=="Lic. Paola Gadsden de la Peza"){println "hola"}
        
        if(turnadoInstance.persona.cargo){
            def resultadoFormateado = turnadoInstance.collect {
